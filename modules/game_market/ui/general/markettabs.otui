MarketTabBar < TabBar
MarketTabBarPanel < TabBarPanel
MarketTabBarButton < TabBarButton
  size: 20 25
  font: verdana-11px-rounded
  text-offset: 0 2

  $!first:
    anchors.left: prev.right
    margin-left: 0

  $hover !checked:
    image-clip: 0 20 20 20
    color: white

  $disabled:
    image-color: #ffffff66
    icon-color: #888888

  $checked:
    image-clip: 0 20 20 20
    color: #ffffff

  $on !checked:
    color: #f55e5e
